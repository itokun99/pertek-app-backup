{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
      "@backend/*": ["src/backend/*"],
      "@lib/*": ["src/lib/*"],
      "@provider/*": ["src/provider/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types": ["src/types"],
      "@schema/*": ["src/schema/*"],
      "@service/*": ["src/service/*"],
      "@template/*": ["src/template/*"],
      "@theme/*": ["src/theme/*"],
      "@general-types": ["src/types"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/theme/overrides/ToggleButton.js",
    "src/theme/overrides/Alert.tsx"
  ],
  "exclude": ["node_modules"]
}
